<mwpf:ContentDialog x:Class="TouchUI.Dialogs.UserExit.UserExitDialog"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mwpf="http://schemas.modernwpf.com/2019"
                    xmlns:touchUI="clr-namespace:TouchUI"
                    xmlns:local="clr-namespace:TouchUI.Dialogs.UserExit"
                    DataContext="{touchUI:DISource Type=local:UserExitDialogViewModel}"
                    Title="Confirm end of work"
                    PrimaryButtonText="Confirm"
                    SecondaryButtonText="Cancel"
                    DefaultButton="Primary">

    <StackPanel VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
        <Label Content="{Binding UserName}" />
        <Label Content="{Binding WorkTime}"
               ContentStringFormat="Recorded worktime: {0:hh\:mm}" />
    </StackPanel>

</mwpf:ContentDialog>